{
  "name": "@benneq/ts-utils",
  "version": "1.0.0",
  "description": "TypeScript Utilities",
  "scripts": {
    "clean": "run-s build:clean docs:clean test:clean",
    "build": "tsc --build",
    "build:clean": "tsc --build --clean",
    "ci": "cross-env NODE_ENV=production run-s test:ci build:ci",
    "compile": "tsc --build --watch --incremental",
    "docs": "typedoc",
    "docs:clean": "rimraf ./docs",
    "lint": "eslint \"packages/**/*.ts\"",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:clean": "rimraf ./coverage",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^29.2.1",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.26.0",
    "jest": "^29.2.2",
    "npm-run-all2": "^6.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typedoc": "^0.23.19",
    "typedoc-plugin-resolve-crossmodule-references": "^0.3.2",
    "typescript": "^4.8.4"
  },
  "workspaces": [
    "packages/*"
  ]
}

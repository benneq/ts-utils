{
  "name": "@benneq/ts-utils",
  "version": "1.0.0",
  "description": "TypeScript Utilities",
  "scripts": {
    "clean": "tsc --build --clean && rimraf ./coverage ./dist ./docs",
    "build": "tsc --build",
    "compile": "tsc --build --watch --incremental",
    "docs": "typedoc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^29.2.1",
    "eslint": "^8.26.0",
    "jest": "^29.2.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typedoc": "^0.23.19",
    "typedoc-plugin-resolve-crossmodule-references": "^0.3.2",
    "typescript": "^4.8.4"
  },
  "workspaces": [
    "packages/*"
  ]
}
